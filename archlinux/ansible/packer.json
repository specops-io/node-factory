{
  "variables": {
    "iso_url": "http://mirrors.kernel.org/archlinux/iso/2016.01.01/archlinux-2016.01.01-dual.iso",
    "iso_checksum": "ff79a9629a83dfedad6c3a58e2e7838c86282315",
    "iso_checksum_type": "sha1"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "guest_os_type": "ArchLinux_64",
      "guest_additions_mode": "disable",
      "http_directory": ".",
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait10><wait10>",
        "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/archlinux/2016.01.01/scripts/install_arch_virtualbox_from_livecd.sh<enter><wait5>",
        "/usr/bin/bash ./install_arch_virtualbox_from_livecd.sh<enter>"
      ],
      "disk_size": 20480,
      "hard_drive_interface": "sata",
      "ssh_timeout": "600s",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl start poweroff.timer"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "3s",
      "execute_command": "sh '{{.Path}}' {{user `vm_name`}}",
      "scripts": [
        "../../scripts/base.sh",
        "../../scripts/install_sudo.sh",
        "../../scripts/create_vagrant_users.sh",
        "../../scripts/install_yaourt.sh",
        "../../scripts/install_python.sh",
        "../../scripts/install_ansible.sh",
        "../../scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false
      },
      {
        "type": "atlas",
        "artifact": "specops-io/archlinux-2016.01.01-ansible",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "description": "Arch Linux 2016.01.01 with ansible"
        }
      }
    ]
  ]
}
